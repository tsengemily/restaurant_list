<head>
  <script src='.././public/javascripts/delete.js'></script>
</head>

<div class="container">
  <div class="row mt-5">

    <div class="col-6 restaurant-picture mt-5">
      <img class="mx-auto d-block mb-4 w-100" src={{restaurant.image}} alt="{{restaurant.name}} style=" max-width:
        600px;">
    </div>

    <div class="col-6">
      <div class="restaurant-show-title-border">
        <h6 class="mb-1 restaurant-show-title">{{restaurant.name_en}}</h5>
          <h1 class="mt-2 restaurant-show-title" style="color: #b92a2a;">{{restaurant.name}}</h1>
      </div>
      <p class="mt-5">
        <span class="mr-3 badge badge-light font-weight-normal" style='font-size: 1em'>
          {{restaurant.rating}}
          <i class="fas fa-star fa-xs"></i>
        </span>
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
        </span>
        {{restaurant.location}}
        <a href={{restaurant.google_map}} class="text-secondary ml-2" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-phone"></i>
        </span>
        {{restaurant.phone}}
      </p>
      <p class="mt-5 description"><span>詳細</span></p>
      <p class="mt-2">
        {{restaurant.description}}
      </p>
    </div>
  </div>
  <div class="mt-4 mb-3 row justify-content-end">
    <a href="/restaurants/{{restaurant._id}}/edit" method="POST">
      <button class="btn mr-2"><i class="fas fa-pen-nib"></i>EDIT</button>
    </a>
    <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST" style="display: inline">
      <button type="submit" class="btn mr-2" onclick="return del()"><i class=" fas
        fa-trash"></i>DELETE</button>
    </form>
    <a href="/">
      <button class="btn"><i class="fas fa-arrow-right"></i>Back</button>
    </a>
  </div>
</div>